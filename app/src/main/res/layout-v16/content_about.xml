<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.makakaton.dm.ac.tec.makakaton.About"
    tools:showIn="@layout/activity_about"
    android:background="@drawable/backgroundabout2"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <Button
            android:layout_width="56dp"
            android:layout_height="25dp"
            android:id="@+id/btnFullHD"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_acerca_de"
                    android:id="@+id/textView7"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="30sp"
                    android:fontFamily="\@assets/Toshiko" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ITCR"
                    android:id="@+id/textView10"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/escuela"
                    android:id="@+id/textView13"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/curso"
                    android:id="@+id/textView11"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/autores"
                    android:id="@+id/textView12"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/robert"
                    android:id="@+id/textView14"
                    android:textColor="@color/dim_foreground_material_light"
                    android:fontFamily="Toshiko" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/franco"
                    android:id="@+id/textView16"
                    android:textColor="@color/dim_foreground_material_light"
                    android:fontFamily="Toshiko" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/samuel"
                    android:id="@+id/textView17"
                    android:textColor="@color/dim_foreground_material_light"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agradecimientos"
                    android:id="@+id/textView18"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profesora"
                    android:id="@+id/textView19"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adriana"
                    android:id="@+id/textView15"
                    android:textColor="@color/dim_foreground_material_light"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion"
                    android:id="@+id/textView9"
                    android:textColor="@color/dim_foreground_material_light"
                    android:textSize="15sp"
                    android:fontFamily="Toshiko" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sinopsis"
                    android:id="@+id/textView8"
                    android:textColor="@color/dim_foreground_material_light"
                    android:fontFamily="Toshiko" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>

</LinearLayout>

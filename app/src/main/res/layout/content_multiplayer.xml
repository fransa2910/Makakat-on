<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.makakaton.dm.ac.tec.makakaton.Multiplayer"
    tools:showIn="@layout/activity_multiplayer"
    android:background="@drawable/backgroundmultiplayer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtM"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Multiplayer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtDifficulty"
        android:layout_below="@+id/txtM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtM"
        android:layout_toStartOf="@+id/txtM">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Servidor"
            android:id="@+id/btnServer"
            android:layout_gravity="center_vertical"
            android:clickable="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unirse"
            android:id="@+id/btnJoin"
            android:layout_gravity="center_vertical"
            android:clickable="false" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Party"
        android:id="@+id/txtParty"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtParty"
        android:layout_alignRight="@+id/txtParty"
        android:layout_alignEnd="@+id/txtParty">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 1"
            android:id="@+id/txtP1"
            android:layout_below="@+id/txtP3"
            android:layout_alignLeft="@+id/txtP3"
            android:layout_alignStart="@+id/txtP3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 2"
            android:id="@+id/txtP2"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignLeft="@+id/txtP4"
            android:layout_alignStart="@+id/txtP4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 3"
            android:id="@+id/txtP3"
            android:layout_below="@+id/txtP2"
            android:layout_alignLeft="@+id/txtP2"
            android:layout_alignStart="@+id/txtP2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Player 4"
            android:id="@+id/txtP4"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/txtParty"
            android:layout_alignStart="@+id/txtParty" />
    </LinearLayout>

</RelativeLayout>
